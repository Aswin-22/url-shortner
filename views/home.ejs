<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <% if (locals.id) { %>
    <p>The generateed id is: <%=`http://localhost:3000/url/${id}` %></p>
    <% } %>
    <div>
      <form action="url" method="POST">
        <input
          type="text"
          name="redirectLink"
          placeholder="Enter redirectLink: "
        />
        <button type="submit">Generate</button>
      </form>
    </div>

    <div>
      <% if (locals.urls) { %>
        <table>
            <thead>
              <th>S.no</th>
              <th>Short Id</th>
              <th>redirectLink</th>
              <th>visit Frequency</th>
            </thead>
            <tbody>
              <% locals.urls.forEach((url, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= url.shortId %></td>
                <td><%= url.redirectLink %></td>
                <td><%= url.visitHistory.length %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
      <% } %>
    </div>
  </body>
</html>
